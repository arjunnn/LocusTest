<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login_Activity"
    android:background="#ffffff">


    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/loginOptionSeparator"
        android:id="@+id/textView"
        android:visibility="visible"
        android:layout_below="@+id/facebook_login_button"
        android:layout_centerHorizontal="true"
        android:paddingTop="15sp"
        android:paddingBottom="15sp" />

    <ImageView
        android:layout_width="192sp"
        android:src="@drawable/ic_launcher"
        android:layout_height="192sp"
        android:id="@+id/imageView"
        android:layout_above="@+id/appCaption"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/appCaption"
        android:id="@+id/appCaption"
        android:textColor="#666666"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55sp"
        android:layout_below="@+id/appCaption"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
